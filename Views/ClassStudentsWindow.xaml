<Window x:Class="SchoolJournalApp.ClassStudentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Керування учнями в класі" MinHeight="600" MinWidth="850"
        WindowStartupLocation="CenterScreen"
        Background="#E3F2FD">

    <Window.Resources>
        <Style x:Key="TransferListStyle" TargetType="ListBox" BasedOn="{StaticResource {x:Type ListBox}}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="SelectionMode" Value="Extended"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="#334E68"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <CollectionViewSource x:Key="GroupedAvailableStudents" Source="{Binding AvailableStudents}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="GroupName"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="txtTitle" Text="⚙️ Керування учнями у класі [КЛАС]" 
                   FontSize="24" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Учні у поточному класі" FontSize="16" FontWeight="SemiBold" Foreground="#4CAF50" Margin="0,0,0,10"/>
                <ListBox x:Name="listCurrentStudents" Style="{StaticResource TransferListStyle}"
                         DisplayMemberPath="FullName" Height="400"/>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="15,0">
                <Button Content="→ Перемістити →" Click="BtnAddStudents_Click" 
                        Style="{StaticResource ModernPrimaryButton}" Width="150" Margin="0,0,0,10"/>
                <Button Content="← Видалити ←" Click="BtnRemoveStudents_Click" 
                        Style="{StaticResource ModernDangerButton}" Width="150"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Доступні учні (за класами)" FontSize="16" FontWeight="SemiBold" Foreground="#FF9800" Margin="0,0,0,10"/>

                <ListBox x:Name="listAvailableStudents" Style="{StaticResource TransferListStyle}"
                         ItemsSource="{Binding Source={StaticResource GroupedAvailableStudents}}"
                         DisplayMemberPath="FullName" Height="400">
                    <ListBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" 
                                               FontSize="15"
                                               Foreground="#102A43"
                                               Margin="0,5,0,5"/>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListBox.GroupStyle>
                </ListBox>
            </StackPanel>
        </Grid>

        <Border Grid.Row="2" Background="#F1F5F9" CornerRadius="0,0,16,16" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Скасувати" 
                        Click="BtnCancel_Click"
                        Style="{StaticResource BaseButtonStyle}"
                        Background="Transparent" Foreground="#78909C" BorderThickness="0"
                        Width="100" Margin="0,0,10,0"/>

                <Button Content="ЗБЕРЕГТИ ЗМІНИ" 
                        Click="BtnSave_Click"
                        Style="{StaticResource ModernPrimaryButton}" 
                        Width="160"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>