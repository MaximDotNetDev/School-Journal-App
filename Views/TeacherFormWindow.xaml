<Window x:Class="SchoolJournalApp.TeacherFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Форма вчителя" MinHeight="650" MinWidth="550" MaxHeight="650" MaxWidth="550"
        WindowStartupLocation="CenterScreen"
        Background="#E3F2FD">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="txtTitle" Text="⚙️ Додавання / Редагування педагога" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#102A43" 
                   Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
            <Border Background="White" CornerRadius="20" Padding="35">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="25" Opacity="0.1" Color="#90A4AE" ShadowDepth="5"/>
                </Border.Effect>

                <StackPanel>

                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>

                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Width="70" Height="70" CornerRadius="35" Background="#E3F2FD" Margin="0,0,25,0" BorderBrush="#2196F3" BorderThickness="2">
                            <TextBlock Text="👨‍🏫" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel VerticalAlignment="Center" Grid.Column="1">
                            <TextBlock Text="ПІБ (Прізвище Ім'я По батькові)" FontSize="12" Foreground="#78909C" Margin="0,0,0,2"/>
                            <TextBox x:Name="txtFullName" FontSize="18" FontWeight="Medium" Foreground="#102A43" Padding="5" Margin="0,0,0,10"/>

                            <TextBlock Text="Посада (PositionName)" FontSize="12" Foreground="#78909C" Margin="0,10,0,2"/>
                            <ComboBox x:Name="cmbPosition" Style="{StaticResource ModernComboBox}" 
                           
                            DisplayMemberPath="PositionName" SelectedValuePath="PositionID"
                                      FontSize="14" Foreground="#0277BD" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                    
                    <TextBlock Text="🔑 Облікові дані" FontSize="16" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,15"/>
                    <UniformGrid Columns="2" Margin="0,0,0,20">
                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Логін (Username)" Foreground="#78909C" FontSize="12"/>
                            <TextBox x:Name="txtLogin" Padding="5" Margin="0,2,0,0"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Пароль (Password)" Foreground="#78909C" FontSize="12"/>
                            <PasswordBox x:Name="txtPassword" Padding="5" Margin="0,2,0,0"/>
                            <TextBlock Text="Введіть для зміни, або залиште порожнім." FontSize="10" Foreground="#78909C" Margin="0,2,0,0"/>
                        </StackPanel>
                    </UniformGrid>

                    <Separator Background="#F1F5F9" Margin="0,0,0,25"/>

                    <TextBlock Text="📋 Загальні відомості" FontSize="16" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,15"/>
                    <UniformGrid Columns="2" Margin="0,0,0,20">
                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Дата народження" Foreground="#78909C" FontSize="12"/>
                            <DatePicker x:Name="dpDOB" Margin="0,2,0,0" Style="{StaticResource ModernDatePicker}"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Стать" Foreground="#78909C" FontSize="12"/>
                            <ComboBox x:Name="cmbGender" Margin="0,2,0,0" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="Чоловіча"/>
                                <ComboBoxItem Content="Жіноча"/>
                                <ComboBoxItem Content="-"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="0,0,10,15" Grid.ColumnSpan="2">
                            <TextBlock Text="Спеціалізація" Foreground="#78909C" FontSize="12"/>
                            <TextBox x:Name="txtSpecialization" Margin="0,2,0,0" Padding="5"/>
                        </StackPanel>
                    </UniformGrid>

                    <TextBlock Text="📞 Контактна інформація" FontSize="16" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,15"/>
                    <Border Background="#F8FDFF" BorderBrush="#E1F5FE" BorderThickness="1" CornerRadius="10" Padding="15" Margin="0,0,0,25">
                        <UniformGrid Columns="2">
                            <StackPanel Margin="0,0,10,0">
                                <TextBlock Text="Мобільний телефон" Foreground="#78909C" FontSize="12"/>
                                <TextBox x:Name="txtPhone" Foreground="#0277BD" FontWeight="Medium" Padding="5" Margin="0,2,0,0"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Електронна пошта" Foreground="#78909C" FontSize="12"/>
                                <TextBox x:Name="txtEmail" Foreground="#0277BD" FontWeight="Medium" Padding="5" Margin="0,2,0,0"/>
                            </StackPanel>
                        </UniformGrid>
                    </Border>

                    <TextBlock Text="🎓 Кваліфікація та навантаження" FontSize="16" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,15"/>
                    <UniformGrid Columns="2" Margin="0,0,0,10">
                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Кваліфікаційна категорія (Qualification)" Foreground="#78909C" FontSize="12"/>
                            <ComboBox x:Name="cmbCategory" Style="{StaticResource ModernComboBox}" 
                                      DisplayMemberPath="QualificationName" SelectedValuePath="QualificationID"
                                      Padding="5" Margin="0,2,0,0"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Педагогічне звання (Title)" Foreground="#78909C" FontSize="12"/>
                            <ComboBox x:Name="cmbTitle" Style="{StaticResource ModernComboBox}"
                                      DisplayMemberPath="TitleName" SelectedValuePath="TitleID"
                                      Padding="5" Margin="0,2,0,0"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Навантаження (ставка, напр. 1.00)" Foreground="#78909C" FontSize="12"/>
                            <TextBox x:Name="txtWorkload" FontWeight="Bold" Padding="5" Margin="0,2,0,0"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Призначити класним керівником" Foreground="#78909C" FontSize="12"/>
                            <ComboBox x:Name="cmbHomeroomClass" Style="{StaticResource ModernComboBox}"
                                      DisplayMemberPath="ClassName" SelectedValuePath="ClassID"
                                      Padding="5" Margin="0,2,0,0"/>
                        </StackPanel>
                    </UniformGrid>

                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="Освіта (ВНЗ)" Foreground="#78909C" FontSize="12"/>
                        <TextBox x:Name="txtEducation" TextWrapping="Wrap" Padding="5" Margin="0,5,0,0" Height="60"/>
                    </StackPanel>

                    <TextBlock Text="📚 Предмети та класи" FontSize="16" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,15"/>

                    <DataGrid x:Name="gridAssignments" AutoGenerateColumns="False" 
                              CanUserAddRows="False" IsReadOnly="True" 
                              HeadersVisibility="Column" Background="#FAFAFA" BorderThickness="1" BorderBrush="#E1F5FE"
                              RowHeight="35" GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F1F5F9"
                              Height="150" Margin="0,0,0,15">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Предмет" Binding="{Binding SubjectName}" Width="*"/>
                            <DataGridTextColumn Header="Клас" Binding="{Binding ClassName}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Content="⚙️ Керувати навантаженням (Предмети/Класи)" 
                            x:Name="btnManageAssignments"
                            Style="{StaticResource ModernPrimaryButton}" 
                            Click="BtnManageAssignments_Click"
                            Margin="0,0,0,25"/>
                    
                    
                    <Border Height="80" BorderBrush="#F1F5F9" BorderThickness="1" CornerRadius="8" Background="#FAFAFA">
                        <TextBlock Text="Навантаження редагується в окремій секції 'Предмети'." VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#90A4AE" FontStyle="Italic"/>
                    </Border>


                </StackPanel>
            </Border>
        </ScrollViewer>

        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="❌ Видалити Вчителя" 
                    x:Name="btnDelete"
                    Style="{StaticResource ModernDangerButton}" 
                    Click="BtnDelete_Click" 
                    Width="160" Margin="0,0,0,0"
                    Visibility="Collapsed"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Скасувати" 
                        x:Name="btnCancel"
                        Style="{StaticResource BaseButtonStyle}"
                        Background="Transparent" Foreground="#78909C" BorderThickness="0"
                        Click="BtnCancel_Click" 
                        Width="100" Margin="0,0,10,0"/>

                <Button Content="Зберегти" 
                        x:Name="btnSave"
                        Style="{StaticResource ModernPrimaryButton}" 
                        Click="BtnSave_Click" 
                        Width="160"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>