<Window x:Class="SchoolJournalApp.StudentFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Форма учня" MinHeight="650" MinWidth="550" MaxHeight="650" MaxWidth="550"
        WindowStartupLocation="CenterScreen"
        Background="#E3F2FD">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="txtTitle" Text="⚙️ Додавання / Редагування учня" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#102A43" 
                   Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
            <Border Background="White" CornerRadius="20" Padding="35">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="25" Opacity="0.1" Color="#90A4AE" ShadowDepth="5"/>
                </Border.Effect>

                <StackPanel>

                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Width="70" Height="70" CornerRadius="35" Background="#F3E5F5" Margin="0,0,25,0" BorderBrush="#AB47BC" BorderThickness="2">
                            <TextBlock Text="🧑‍🎓" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel VerticalAlignment="Center" Grid.Column="1">
                            <TextBlock Text="Прізвище" FontSize="12" Foreground="#78909C" Margin="0,0,0,2"/>
                            <TextBox x:Name="txtLastName" FontSize="16" FontWeight="Medium" Foreground="#102A43" Padding="5" Margin="0,0,0,10"/>

                            <TextBlock Text="Ім'я" FontSize="12" Foreground="#78909C" Margin="0,0,0,2"/>
                            <TextBox x:Name="txtFirstName" FontSize="16" FontWeight="Medium" Foreground="#102A43" Padding="5" Margin="0,0,0,10"/>

                            <TextBlock Text="По батькові" FontSize="12" Foreground="#78909C" Margin="0,0,0,2"/>
                            <TextBox x:Name="txtMiddleName" FontSize="16" FontWeight="Medium" Foreground="#102A43" Padding="5"/>
                        </StackPanel>
                    </Grid>

                    <Separator Background="#F1F5F9" Margin="0,0,0,25"/>

                    <TextBlock Text="📋 Загальні відомості" FontSize="16" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,15"/>
                    <UniformGrid Columns="2" Margin="0,0,0,20">

                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Дата народження" Foreground="#78909C" FontSize="12"/>
                            <DatePicker x:Name="dpDOB" Margin="0,2,0,0" Style="{StaticResource ModernDatePicker}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Клас" Foreground="#78909C" FontSize="12"/>
                            <ComboBox x:Name="cmbClasses" Style="{StaticResource ModernComboBox}" 
                                      DisplayMemberPath="ClassName" SelectedValuePath="ClassID"
                                      Margin="0,2,0,0"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Стать" Foreground="#78909C" FontSize="12"/>
                            <ComboBox x:Name="cmbGender" Margin="0,2,0,0" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="Чоловіча"/>
                                <ComboBoxItem Content="Жіноча"/>
                                <ComboBoxItem Content="-"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Школа, звідки прибув" Foreground="#78909C" FontSize="12"/>
                            <TextBox x:Name="txtSchoolName" Margin="0,2,0,0" Padding="5"/>
                        </StackPanel>
                    </UniformGrid>

                    <TextBlock Text="📄 Документи" FontSize="16" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,15"/>
                    <UniformGrid Columns="2" Margin="0,0,0,20">
                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Тип документа (напр. Свідоцтво)" Foreground="#78909C" FontSize="12"/>
                            <TextBox x:Name="txtDocumentType" Padding="5" Margin="0,2,0,0"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Номер документа" Foreground="#78909C" FontSize="12"/>
                            <TextBox x:Name="txtDocumentNumber" Padding="5" Margin="0,2,0,0"/>
                        </StackPanel>
                    </UniformGrid>

                    <TextBlock Text="📝 Зарахування" FontSize="16" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,15"/>
                    <UniformGrid Columns="2" Margin="0,0,0,20">
                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Дата зарахування" Foreground="#78909C" FontSize="12"/>
                            <DatePicker x:Name="dpEnrollmentDate" Margin="0,2,0,0" Style="{StaticResource ModernDatePicker}"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,10,15" Grid.ColumnSpan="2">
                            <TextBlock Text="Підстава зарахування" Foreground="#78909C" FontSize="12"/>
                            <TextBox x:Name="txtEnrollmentReason" TextWrapping="Wrap" Padding="5" Margin="0,2,0,0" Height="60"/>
                        </StackPanel>
                    </UniformGrid>

                    <TextBlock Text="📞 Контактний телефон (особова справа)" FontSize="16" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,15"/>
                    <TextBox x:Name="txtParentContactPhone" Padding="5" Margin="0,2,0,25" Foreground="#0277BD" FontWeight="Medium"/>

                    <Separator Background="#F1F5F9" Margin="0,0,0,25"/>

                    <TextBlock Text="👨‍👩‍👦 Керування Батьками/Опікунами" FontSize="16" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,15"/>

                    <DataGrid x:Name="gridParents" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False" 
                              IsReadOnly="True" 
                              HeadersVisibility="Column" 
                              Background="#FAFAFA" 
                              BorderThickness="1" 
                              BorderBrush="#E1F5FE"
                              RowHeight="35" 
                              GridLinesVisibility="Horizontal" 
                              HorizontalGridLinesBrush="#F1F5F9"
                              Height="150" Margin="0,0,0,15">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="100"/>
                            <DataGridTextColumn Header="ПІБ" Binding="{Binding FullName}" Width="*"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Content="⚙️ Керувати списком батьків" 
                            x:Name="btnManageParents"
                            Style="{StaticResource ModernPrimaryButton}" 
                            Click="BtnManageParents_Click"
                            Margin="0,0,0,25"/>

                    <Border Height="80" BorderBrush="#F1F5F9" BorderThickness="1" CornerRadius="8" Background="#FAFAFA" Visibility="Collapsed">
                        <TextBlock Text="Інформація про додаткових батьків/опікунів редагується в окремому вікні." 
                                   VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#90A4AE" FontStyle="Italic" TextWrapping="Wrap" TextAlignment="Center"/>
                    </Border>


                </StackPanel>
            </Border>
        </ScrollViewer>

        <Grid Grid.Row="2" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="❌ Видалити Учня" 
                    x:Name="btnDelete"
                    Style="{StaticResource ModernDangerButton}" 
                    Click="BtnDelete_Click" 
                    Width="160" Margin="0,0,0,0"
                    Visibility="Collapsed"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left" Width="321">
                <Button Content="Скасувати" 
                        x:Name="btnCancel"
                        Style="{StaticResource BaseButtonStyle}"
                        Background="Transparent" Foreground="#78909C" BorderThickness="0"
                        Click="BtnCancel_Click" 
                        Width="100" Margin="0,0,10,0"/>

                <Button Content="Зберегти" 
                        x:Name="btnSave"
                        Style="{StaticResource ModernPrimaryButton}" 
                        Click="BtnSave_Click" 
                        Width="160"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>