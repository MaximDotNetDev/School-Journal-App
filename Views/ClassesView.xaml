<UserControl x:Class="SchoolJournalApp.Views.ClassesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             Background="#E3F2FD">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" MinWidth="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,25,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock Text="🏫 Класи" FontSize="26" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,5"/>
                <TextBlock Text="Керування групами" FontSize="13" Foreground="#546E7A" Margin="0,0,0,15"/>
            </StackPanel>

            <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="15" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock x:Name="txtFormTitle" Text="➕ Новий клас" FontWeight="SemiBold" FontSize="16" Foreground="#0277BD" Margin="0,0,0,10"/>

                    <TextBlock Text="Назва (напр. 5-А)" Foreground="#78909C" FontSize="11" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtClassName" Height="32" Padding="8,0" VerticalContentAlignment="Center" 
                             BorderBrush="#CFD8DC" BorderThickness="1" FontSize="13" Margin="0,0,0,8"/>

                    <TextBlock Text="Рівень (напр. 5)" Foreground="#78909C" FontSize="11" Margin="0,0,0,3"/>
                    <TextBox x:Name="txtGradeLevel" Height="32" Padding="8,0" VerticalContentAlignment="Center" 
                             BorderBrush="#CFD8DC" BorderThickness="1" FontSize="13" Margin="0,0,0,8"/>

                    <TextBlock Text="Класний Керівник" Foreground="#78909C" FontSize="11" Margin="0,0,0,3"/>
                    <ComboBox x:Name="cmbTeachers" 
                              Height="32"
                              Style="{StaticResource ModernComboBox}"
                              DisplayMemberPath="FullName" 
                              SelectedValuePath="TeacherID" 
                              FontSize="13"
                              Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="btnCancelEdit" Content="Відміна" 
                                Click="BtnCancelEdit_Click"
                                Style="{StaticResource BaseButtonStyle}"
                                Background="Transparent" Foreground="#78909C" BorderThickness="0"
                                Visibility="Collapsed" Width="70" FontSize="12" Margin="0,0,5,0"/>

                        <Button x:Name="btnSaveClass" Content="ЗБЕРЕГТИ" 
                                Click="BtnSaveClass_Click"
                                Style="{StaticResource ModernPrimaryButton}"
                                FontSize="12"
                                Width="120" Height="32"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <TextBlock Grid.Row="2" Text="📊 Існуючі класи" FontWeight="SemiBold" FontSize="16" Foreground="#102A43" Margin="0,0,0,8"/>

            <Border Grid.Row="3" Background="White" CornerRadius="10" BorderThickness="1" BorderBrush="#E2E8F0">
                <ListBox x:Name="listClasses" BorderThickness="0" Background="Transparent"
                         SelectionChanged="ListClasses_SelectionChanged" DisplayMemberPath="ClassName" SelectedValuePath="ClassID">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="15,8"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Foreground" Value="#334E68"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="bd" Background="Transparent" Padding="{TemplateBinding Padding}" BorderBrush="#F1F5F9" BorderThickness="0,0,0,1">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="#F8FDFF"/>
                                                <Setter Property="Foreground" Value="#0277BD"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="bd" Property="Background" Value="#E1F5FE"/>
                                                <Setter Property="Foreground" Value="#01579B"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>
        </Grid>

        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border x:Name="ClassDetailsCard" Background="White" CornerRadius="20" Padding="40" Visibility="Collapsed" Margin="5">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="25" Opacity="0.1" Color="#90A4AE" ShadowDepth="5"/>
                </Border.Effect>

                <StackPanel>
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock x:Name="txtClassHeader" Text="6 (6 клас)" FontSize="32" FontWeight="Bold" Foreground="#102A43" TextWrapping="Wrap"/>
                            <Border Background="#E1F5FE" HorizontalAlignment="Left" CornerRadius="8" Padding="15,6" Margin="0,10,0,0">
                                <TextBlock x:Name="txtStudentCount" Text="22 учнів" FontSize="14" Foreground="#0277BD" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                            <Button Content="✏️ Редагувати" 
                                    Click="BtnEditClass_Click" 
                                    Style="{StaticResource BaseButtonStyle}"
                                    Background="#F1F5F9" Foreground="#475569" BorderThickness="0"
                                    Width="120" Margin="0,0,10,0" Height="40"/>

                            <Button x:Name="btnDeleteClass" Content="❌ Видалити" 
                                    Click="BtnDeleteClass_Click" 
                                    Style="{StaticResource BaseButtonStyle}"
                                    Background="#FFEBEE" Foreground="#D32F2F" BorderThickness="0"
                                    Width="110" Height="40"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="👨‍🏫 Класний Керівник" FontSize="18" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,15"/>
                    <Border Background="#F8FDFF" BorderBrush="#E1F5FE" BorderThickness="1" CornerRadius="10" Padding="20" Margin="0,0,0,30">
                        <TextBlock x:Name="txtHomeroomTeacher" Text="Не призначено" FontSize="18" FontWeight="Medium" Foreground="#0277BD"/>
                    </Border>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="👥 Список учнів" FontSize="18" FontWeight="Bold" Foreground="#102A43" VerticalAlignment="Center"/>

                        <Button Grid.Column="1" Content="⚙️ Керувати списком" 
                                Click="BtnManageStudents_Click"
                                Style="{StaticResource BaseButtonStyle}"
                                Background="#E0E0E0" Foreground="#37474F"
                                Width="180" Height="35"/>
                    </Grid>

                    <DataGrid x:Name="gridStudentsInClass" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                              HeadersVisibility="Column" Background="White" BorderThickness="1" BorderBrush="#E1F5FE"
                              RowHeight="40" GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F1F5F9">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Padding" Value="10,10"/>
                                <Setter Property="Background" Value="#F8FAFC"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#64748B"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#E2E8F0"/>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№" Binding="{Binding Index}" Width="50"/>
                            <DataGridTextColumn Header="ПІБ" Binding="{Binding FullName}" Width="*"/>
                            <DataGridTextColumn Header="Дата нар." Binding="{Binding DateOfBirth, StringFormat=\{0:dd.MM.yyyy\}}" Width="120"/>
                        </DataGrid.Columns>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="10,0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="#334E68"/>
                            </Style>
                        </DataGrid.CellStyle>
                    </DataGrid>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>