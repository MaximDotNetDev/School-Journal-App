<UserControl x:Class="SchoolJournalApp.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             d:DesignHeight="700" d:DesignWidth="1100"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#E3F2FD" Offset="0"/>
            <GradientStop Color="#E0F7FA" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>

    <UserControl.Resources>
        <Style x:Key="ReportButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="0,0,15,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" Opacity="0.2" ShadowDepth="2" Color="#B0BEC5"/>
                            </Border.Effect>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="📊 Аналітика та звіти" FontSize="26" FontWeight="Bold" Foreground="#102A43"/>
            <TextBlock Text="Генерація звітів за обраний період" FontSize="14" Foreground="#546E7A" Margin="0,5,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="15" Padding="20" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="3"/>
            </Border.Effect>

            <Viewbox Stretch="Uniform" StretchDirection="DownOnly" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal">

                    <StackPanel Margin="0,0,15,0">
                        <TextBlock Text="Клас" Foreground="#546E7A" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbClasses" Width="100" Style="{StaticResource ModernComboBox}" 
                                  DisplayMemberPath="ClassName" SelectedValuePath="ClassID" SelectionChanged="CmbClasses_SelectionChanged" IsTextSearchEnabled="True"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,15,0">
                        <TextBlock Text="Учень" Foreground="#546E7A" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbStudents" Width="250" Style="{StaticResource ModernComboBox}" 
                                  DisplayMemberPath="FullName" SelectedValuePath="StudentID" IsEnabled="False" IsTextSearchEnabled="True"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,15,0">
                        <TextBlock Text="Предмет" Foreground="#546E7A" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbSubjects" Width="200" Style="{StaticResource ModernComboBox}" 
                                  DisplayMemberPath="SubjectName" SelectedValuePath="SubjectID" IsTextSearchEnabled="True"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,15,0">
                        <TextBlock Text="Період (З - До)" Foreground="#546E7A" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <DatePicker x:Name="dateFrom" Width="120" Height="40" Margin="0,0,5,0" VerticalContentAlignment="Center"/>
                            <DatePicker x:Name="dateTo" Width="120" Height="40" VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </Viewbox>
        </Border>

        <Viewbox Grid.Row="2" Stretch="Uniform" StretchDirection="DownOnly" HorizontalAlignment="Left" Margin="0,0,0,10">
            <WrapPanel Orientation="Horizontal">
                <Button Content="🏆 Рейтинг класу" Click="BtnReportClassRating_Click" Background="#2196F3" Width="160" Style="{StaticResource ReportButtonStyle}"/>
                <Button Content="🚫 Пропуски" Click="BtnReportClassAbsence_Click" Background="#FF9800" Width="140" Style="{StaticResource ReportButtonStyle}"/>
                <Button Content="📝 Контрольні роботи" Click="BtnReportControlWorks_Click" Background="#9C27B0" Width="180" Style="{StaticResource ReportButtonStyle}"/>
                <Button Content="👤 Табель учня" Click="BtnReportStudentAll_Click" Background="#4CAF50" Width="150" Style="{StaticResource ReportButtonStyle}"/>
                <Button Content="🔎 Детально по предмету" Click="BtnReportStudentSubject_Click" Background="#009688" Width="200" Style="{StaticResource ReportButtonStyle}"/>
            </WrapPanel>
        </Viewbox>

        <DataGrid x:Name="gridReports" Grid.Row="3" 
                  AutoGenerateColumns="True" 
                  IsReadOnly="True" 
                  Background="White" 
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#F1F5F9"
                  VerticalGridLinesBrush="Transparent"
                  BorderThickness="0"
                  RowHeight="40"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Margin="0,0,0,15">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Height" Value="45"/>
                    <Setter Property="Background" Value="#E1F5FE"/>
                    <Setter Property="Foreground" Value="#37474F"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="10,0"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="BorderBrush" Value="#B3E5FC"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Cursor" Value="Arrow"/>
                    <Style.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="#F8FBFF"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E6F4FF"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#2196F3"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="10,0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
        </DataGrid>

        <Border Grid.Row="4" Background="#FAFAFA" CornerRadius="10" Padding="10" BorderBrush="#EEEEEE" BorderThickness="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Експорт результатів:" VerticalAlignment="Center" Foreground="Gray" Margin="0,0,15,0"/>

                <Button Click="BtnExportExcel_Click" Background="#4CAF50" Width="120" Height="35" Cursor="Hand" Margin="0,0,10,0" BorderThickness="0">
                    <Border CornerRadius="6" Background="#4CAF50">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="📊" Foreground="White" Margin="0,0,8,0"/>
                            <TextBlock Text="Excel (.csv)" Foreground="White" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Button>

                <Button Click="BtnExportPDF_Click" Background="#F44336" Width="120" Height="35" Cursor="Hand" BorderThickness="0">
                    <Border CornerRadius="6" Background="#F44336">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="📄" Foreground="White" Margin="0,0,8,0"/>
                            <TextBlock Text="PDF (Друк)" Foreground="White" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Button>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>