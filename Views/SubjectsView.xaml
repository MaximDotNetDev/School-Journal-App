<UserControl x:Class="SchoolJournalApp.Views.SubjectsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             d:DesignHeight="650" d:DesignWidth="1000"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#E3F2FD" Offset="0"/>
            <GradientStop Color="#E0F7FA" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" MinWidth="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,25,0">
            <TextBlock Text="Предмети" FontSize="28" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,5"/>
            <TextBlock Text="Навчальні дисципліни" FontSize="14" Foreground="#546E7A" Margin="0,0,0,30"/>

            <Border Background="White" CornerRadius="15" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" Opacity="0.05" ShadowDepth="5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="📚 Оберіть предмет" FontWeight="SemiBold" Foreground="#0097A7" Margin="0,0,0,10"/>

                    <ComboBox x:Name="cmbSubjects" Style="{StaticResource ModernComboBox}"
                              SelectionChanged="CmbSubjects_SelectionChanged" 
                              DisplayMemberPath="SubjectName" SelectedValuePath="SubjectID"/>

                    <TextBlock Text="Оберіть дисципліну, щоб побачити розподіл по класах та викладачів."
                               TextWrapping="Wrap" Foreground="#90A4AE" FontSize="13" Margin="0,20,0,0" LineHeight="20"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border x:Name="SubjectCard" Background="White" CornerRadius="20" Padding="35" Visibility="Collapsed" Margin="5">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="25" Opacity="0.1" Color="#0097A7" ShadowDepth="5"/>
                </Border.Effect>

                <StackPanel>
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Width="90" Height="90" CornerRadius="25" Background="#E0F7FA" Margin="0,0,25,0" BorderBrush="#00BCD4" BorderThickness="2">
                            <TextBlock Text="📘" FontSize="45" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel VerticalAlignment="Center" Grid.Column="1">
                            <TextBlock x:Name="txtSubjectName" Text="Назва предмету" FontSize="26" FontWeight="Bold" Foreground="#102A43" TextWrapping="Wrap"/>
                            <Border Background="#B2EBF2" HorizontalAlignment="Left" CornerRadius="6" Padding="12,5" Margin="0,8,0,0">
                                <TextBlock Text="Шкільна програма" FontSize="14" Foreground="#006064" FontWeight="SemiBold"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <Separator Background="#E0F7FA" Margin="0,0,0,25"/>

                    <TextBlock Text="📊 Статистика викладання" FontSize="18" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,15"/>

                    <UniformGrid Columns="2" Margin="0,0,0,25">
                        <Border Background="#FAFAFA" BorderBrush="#EEEEEE" BorderThickness="1" Padding="15" CornerRadius="10" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Кількість класів" Foreground="#78909C" FontSize="13"/>
                                <TextBlock x:Name="txtClassesCount" Text="0" FontSize="24" FontWeight="Bold" Foreground="#0097A7" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#FAFAFA" BorderBrush="#EEEEEE" BorderThickness="1" Padding="15" CornerRadius="10">
                            <StackPanel>
                                <TextBlock Text="Вчителів задіяно" Foreground="#78909C" FontSize="13"/>
                                <TextBlock x:Name="txtTeachersCount" Text="0" FontSize="24" FontWeight="Bold" Foreground="#006064" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>

                    <TextBlock Text="👨‍🏫 Розподіл навантаження" FontSize="18" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,15"/>
                    
                    <DataGrid x:Name="gridTeaching" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                              HeadersVisibility="Column" Background="White" 
                              BorderThickness="1" BorderBrush="#B2EBF2"
                              RowHeight="45" GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#E0F7FA">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#E0F7FA"/>
                                <Setter Property="Foreground" Value="#006064"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#B2EBF2"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#B2EBF2"/>
                                        <Setter Property="Foreground" Value="#006064"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Клас" Binding="{Binding ClassName}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#0097A7"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Вчитель предмету" Binding="{Binding SubjectTeacher}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Medium"/>
                                        <Setter Property="Foreground" Value="#37474F"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Класний керівник" Binding="{Binding HomeroomTeacher}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#78909C"/>
                                        <Setter Property="FontStyle" Value="Italic"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>