<UserControl x:Class="SchoolJournalApp.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <DropShadowEffect x:Key="ShadowEffect" Color="#B0C4DE" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
    </UserControl.Resources>

    <Grid>
        <Border Background="White" 
                Width="400" 
                Height="550" 
                CornerRadius="15" 
                Effect="{StaticResource ShadowEffect}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel Margin="20" VerticalAlignment="Center">
                <TextBlock Text="🎓 TEACHER HUB" 
                    FontSize="24" FontWeight="Bold" Foreground="#1565C0" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Вхід у систему" FontSize="16" Foreground="#64748B" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <StackPanel x:Name="LoginFields" Visibility="Collapsed">
                    <TextBlock Text="Ім'я користувача (Логін)" Foreground="#627D98" Margin="0,0,0,5" HorizontalAlignment="Center"/>
                    <TextBox x:Name="txtUsername" Text="" Height="35" Padding="5" VerticalContentAlignment="Center" TextAlignment="Center"/>

                    <TextBlock Text="Пароль" Foreground="#627D98" Margin="0,10,0,5" HorizontalAlignment="Center"/>
                    <PasswordBox x:Name="txtPassword" Height="35" Padding="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />

                    <CheckBox x:Name="chkRememberMe" 
              Content="Запам'ятати мене" 
              Foreground="#627D98" 
              Margin="0,10,0,0" 
              HorizontalAlignment="Center"
              Cursor="Hand"/>
                </StackPanel>

                <StackPanel x:Name="DbSettings" Visibility="Collapsed">

                    <TextBlock Text="Сервер SQL" Foreground="#627D98" Margin="0,10,0,5" HorizontalAlignment="Center"/>
                    <TextBox x:Name="txtServer" Text="DESKTOP-4HPGSMD" Height="35" Padding="5" 
                        VerticalContentAlignment="Center" TextAlignment="Center"/>

                    <TextBlock Text="Назва Бази Даних" Foreground="#627D98" Margin="0,10,0,5" HorizontalAlignment="Center"/>

                    <TextBox x:Name="txtDatabase" Text="DB_SchoolJournal" Height="35" Padding="5" VerticalContentAlignment="Center" TextAlignment="Center"/>

                    <CheckBox x:Name="chkTrusted" Content="Windows Authentication" IsChecked="True" Margin="0,10,0,0" Foreground="#486581" HorizontalAlignment="Center"/>
                </StackPanel>

                <TextBlock x:Name="txtStatus" Text="Введіть облікові дані" Foreground="#78909C" Margin="0,10,0,0" HorizontalAlignment="Center"/>


                <Button x:Name="btnLogin" Click="BtnLogin_Click" Content="УВІЙТИ" Height="45" Margin="0,15,0,0" Background="#2196F3" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>