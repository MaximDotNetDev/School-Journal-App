<UserControl x:Class="SchoolJournalApp.Views.TeachersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             d:DesignHeight="750" d:DesignWidth="1000"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#E3F2FD" Offset="0"/>
            <GradientStop Color="#E0F7FA" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" MinWidth="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,25,0">
            <TextBlock Text="Вчителі" FontSize="28" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,5"/>
            <TextBlock Text="База даних педагогів" FontSize="14" Foreground="#546E7A" Margin="0,0,0,30"/>

            <Border Background="White" CornerRadius="15" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" Opacity="0.05" ShadowDepth="5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="🔎 Пошук за прізвищем" FontWeight="SemiBold" Foreground="#0277BD" Margin="0,0,0,10"/>
                    <ComboBox x:Name="cmbTeachers" Style="{StaticResource ModernComboBox}"
                              SelectionChanged="CmbTeachers_SelectionChanged" 
                              DisplayMemberPath="FullName" SelectedValuePath="TeacherID"/>
                    <TextBlock Text="Оберіть вчителя зі списку для перегляду повного досьє."
                               TextWrapping="Wrap" Foreground="#90A4AE" FontSize="13" Margin="0,20,0,0" LineHeight="20"/>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="➕ Додати Вчителя" Style="{StaticResource ModernPrimaryButton}"
                        Click="BtnOpenTeacherForm_Click" Width="160" Margin="0,0,10,0"/>

                <Button x:Name="btnEditTeacher" Content="✏️ Редагувати" Style="{StaticResource ModernPrimaryButton}"
                        Click="BtnOpenTeacherForm_Click" Width="120" IsEnabled="False" 
                        Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Self}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
        </StackPanel>

        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border x:Name="TeacherCard" Background="White" CornerRadius="20" Padding="35" Visibility="Collapsed" Margin="5">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="25" Opacity="0.1" Color="#90A4AE" ShadowDepth="5"/>
                </Border.Effect>

                <StackPanel>
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Width="90" Height="90" CornerRadius="45" Background="#E3F2FD" Margin="0,0,25,0" BorderBrush="#2196F3" BorderThickness="2">
                            <TextBlock Text="👨‍🏫" FontSize="45" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel VerticalAlignment="Center" Grid.Column="1">
                            <TextBlock x:Name="txtName" Text="Прізвище Ім'я" FontSize="26" FontWeight="Bold" Foreground="#102A43" TextWrapping="Wrap"/>
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#E1F5FE" HorizontalAlignment="Left" CornerRadius="6" Padding="12,5" Margin="0,8,10,0">
                                    <TextBlock x:Name="txtPosition" Text="Вчитель" FontSize="15" Foreground="#0277BD" FontWeight="SemiBold"/>
                                </Border>
                                <Border x:Name="bdHomeroom" Background="#FFF3E0" HorizontalAlignment="Left" CornerRadius="6" Padding="12,5" Margin="0,8,0,0" Visibility="Collapsed">
                                    <TextBlock x:Name="txtHomeroom" Text="Класний керівник" FontSize="15" Foreground="#E65100" FontWeight="SemiBold"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <Separator Background="#F1F5F9" Margin="0,0,0,25"/>

                    <TextBlock Text="📋 Загальні відомості" FontSize="18" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,15"/>

                    <UniformGrid Columns="2" Margin="0,0,0,20">
                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Дата народження" Foreground="#78909C" FontSize="12"/>
                            <TextBlock x:Name="txtDOB" Text="-" FontSize="16" 
                                       Foreground="#37474F" FontWeight="Medium" Margin="0,2,0,0"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Стать" Foreground="#78909C" FontSize="12"/>
                            <TextBlock x:Name="txtGender" Text="-" FontSize="16" Foreground="#37474F" FontWeight="Medium" Margin="0,2,0,0"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Спеціалізація" Foreground="#78909C" FontSize="12"/>
                            <TextBlock x:Name="txtSpecialization" Text="-" FontSize="16" Foreground="#37474F" FontWeight="Medium" Margin="0,2,0,0"/>
                        </StackPanel>
                    </UniformGrid>

                    <TextBlock Text="📞 Контактна інформація" FontSize="18" FontWeight="Bold" 
                               Foreground="#102A43" Margin="0,0,0,15"/>
                    <Border Background="#F8FDFF" BorderBrush="#E1F5FE" BorderThickness="1" CornerRadius="10" Padding="15" Margin="0,0,0,25">
                        <UniformGrid Columns="2">
                            <StackPanel Margin="0,0,10,0">
                                <TextBlock Text="Мобільний телефон" Foreground="#78909C" FontSize="12"/>
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <TextBlock Text="📱" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="txtPhone" Text="-" FontSize="15" Foreground="#0277BD" FontWeight="Medium"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Електронна пошта" Foreground="#78909C" FontSize="12"/>
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <TextBlock Text="✉️" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="txtEmail" Text="-" FontSize="15" Foreground="#0277BD" FontWeight="Medium"/>
                                </StackPanel>
                            </StackPanel>
                        </UniformGrid>
                    </Border>

                    <TextBlock Text="🎓 Кваліфікація та Навантаження" FontSize="18" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,15"/>

                    <UniformGrid Columns="2" Margin="0,0,0,10">
                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Кваліфікаційна категорія" Foreground="#78909C" FontSize="12"/>
                            <TextBlock x:Name="txtCategory" Text="-" FontSize="16" Foreground="#37474F" FontWeight="Medium" Margin="0,2,0,0"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Педагогічне звання" Foreground="#78909C" FontSize="12"/>
                            <TextBlock x:Name="txtTitle" Text="-" FontSize="16" Foreground="#37474F" FontWeight="Medium" Margin="0,2,0,0"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,10,15">
                            <TextBlock Text="Навантаження (ставка)" Foreground="#78909C" FontSize="12"/>
                            <TextBlock x:Name="txtWorkload" Text="-" FontSize="16" Foreground="#2E7D32" FontWeight="Bold" Margin="0,2,0,0"/>
                        </StackPanel>
                    </UniformGrid>

                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="Освіта (ВНЗ)" Foreground="#78909C" FontSize="12"/>
                        <TextBlock x:Name="txtEducation" Text="-" FontSize="15" Foreground="#37474F" TextWrapping="Wrap" Margin="0,5,0,0"/>
                    </StackPanel>

                    <TextBlock Text="📚 Предмети та Класи" FontSize="18" FontWeight="Bold" Foreground="#102A43" Margin="0,0,0,15"/>
                    <DataGrid x:Name="gridSubjects" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                              HeadersVisibility="Column" Background="White" BorderThickness="1" BorderBrush="#E1F5FE"
                              RowHeight="40" GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#F1F5F9">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Предмет" Binding="{Binding SubjectName}" Width="*"/>
                            <DataGridTextColumn Header="Клас" Binding="{Binding ClassName}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>